{
  "name": "nuxt-app",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "npx simple-git-hooks",
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint . && stylelint '**/*.css'",
    "lint:fix": "eslint . --fix && stylelint '**/*.css' --fix"
  },
  "dependencies": {
    "@nuxt/content": "^2.13.2",
    "@nuxt/image": "^1.7.1",
    "@pinia/nuxt": "^0.5.4",
    "@vueuse/core": "^11.0.3",
    "bootstrap": "^5.2.3",
    "nuxt": "^3.13.0",
    "vue": "latest"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.0.0",
    "eslint": "^9.9.1",
    "simple-git-hooks": "^2.11.1",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.1"
  },
  "overrides": {
    "vue": "latest"
  },
  "simple-git-hooks": {
    "pre-commit": "cd app && npm run lint:fix"
  }
}
